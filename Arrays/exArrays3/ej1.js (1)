// ej4
const palabras = [
  'ana',
  'radar',
  'javascript',
  'reconocer',
  'oro',
  'palindromo',
  'salas',
];
let palindromo = [];
for (let palabra of palabras) {
  let isPalin = true;

  for (const i in palabra) {
    if (palabras[i] !== palabras[palabra.length - 1 - i]) {
      isPalin = false;
      break;
    }
  }
  if (isPalin) {
    palindromo[palindromos.length] = palabra;
    console.log(palindromo);
  }
}
